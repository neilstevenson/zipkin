<?xml version="1.0" encoding="UTF-8"?>
<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.8.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Default cluster formation credentials. You should change these :-) -->
    <group>
        <name>dev</name>
        <password>dev-pass</password>
    </group>

    <!-- Base port to use, and hosts to connect to -->
    <network>
        <port>5701</port>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <member-list>
                    <member>127.0.0.1</member>
                </member-list>
            </tcp-ip>
        </join>
    </network>

    <!-- Predefine maps if you need to customise, otherwise leave to create on demand without defaults -->

    <map name="zipkin_spans">
    	<!-- Object storage rather than byte array speeds up search -->

    	<in-memory-format>OBJECT</in-memory-format>
		<!--
		<indexes>
			<index ordered="false">name</index>
		</indexes>
		-->
    </map>

</hazelcast>
